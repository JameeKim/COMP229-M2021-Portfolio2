<h1>Sign Up</h1>

<% if (messages.length > 0) { %>
<div class="mb-3 alert alert-danger"><%= messages %></div>
<% } %>

<form method="post">
  <fieldset>
    <legend>User Information</legend>
    <div class="row row-cols-1 row-cols-md-2 mb-3">
      <div class="col mb-2 mb-md-0">
        <label for="register-first-name" class="form-label">First Name</label>
        <input type="text" name="firstName" id="register-first-name" class="form-control" required>
      </div>
      <div class="col">
        <label for="register-last-name" class="form-label">Last Name</label>
        <input type="text" name="lastName" id="register-last-name" class="form-control" required>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 mb-3">
      <div class="col mb-2 mb-md-0">
        <label for="register-email" class="form-label">Email Address</label>
        <input type="email" name="email" id="register-email" class="form-control" required>
      </div>
      <div class="col">
        <label for="register-phone" class="form-label">Phone Number (Optional)</label>
        <input type="tel" name="phone" id="register-phone" class="form-control">
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Credentials Information</legend>
    <div class="mb-3">
      <label for="register-username" class="form-label">Username</label>
      <input type="text" name="username" id="register-username" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="register-password" class="form-label">Password</label>
      <input type="password" name="password" id="register-password" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="register-password-confirm" class="form-label">Password Confirm</label>
      <input type="password" name="password-confirm" id="register-password-confirm" class="form-control" required>
    </div>
  </fieldset>

  <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary text-light">Sign Up</button>
  </div>
</form>

<div class="mt-3">
  <p class="text-center">
    Already have an account? <br>
    Sign in <a href="/login">here</a>.
  </p>
</div>
