<h1>Sign In</h1>

<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
    <% if (messages.error) { %>
    <div class="mt-3 alert alert-danger"><%= messages.error %></div>
    <% } %>

    <form method="post" class="mt-3">
      <div class="mb-3">
        <label for="login-username" class="form-label">Username</label>
        <input type="text" name="username" id="login-username" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="login-password" class="form-label">Password</label>
        <input type="password" name="password" id="login-password" class="form-control" required>
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary text-light">Sign In</button>
      </div>
    </form>

    <div class="mt-3">
      <p class="text-center">
        Don't have an account? <br>
        Create a new one for free <a href="/register">here</a>.
      </p>
    </div>
  </div>
</div>
