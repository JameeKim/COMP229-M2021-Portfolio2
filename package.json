{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node ./index.js",
    "build": "concurrently -n server,client npm:build-server npm:build-client",
    "build-server": "tsc --build",
    "build-client": "sass --quiet --style=compressed --load-path=node_modules client/scss:client/public/styles",
    "watch-ts": "tsc --watch",
    "watch-server": "nodemon",
    "watch-client": "sass --watch --update --quiet --load-path=node_modules client/scss:client/public/styles"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bootstrap": "^5.0.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "http-errors": "^1.8.0",
    "mongoose": "^5.12.14",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0"
  },
  "devDependencies": {
    "@types/bootstrap": "^5.0.16",
    "@types/connect-flash": "^0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/passport-local-mongoose": "^4.0.14",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "nodemon": "^2.0.7",
    "sass": "^1.35.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
